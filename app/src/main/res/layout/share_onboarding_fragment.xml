<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:id="@+id/parking_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:padding="16dp"
        android:text="Easily share location with your family and friends."
        android:textSize="24sp"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryText"
        />

    <ImageView
        android:id="@+id/parking_image_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_location_sharing"
        android:tint="@color/colorAccent"
        android:padding="16dp"
        />



    <!-- Number 1 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_number_one"
            android:padding="8dp"
            android:layout_gravity="center"
            android:tint="@color/colorShareLogin"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Login using your number."
            android:textSize="16sp"
            android:textColor="@color/colorPrimaryText"
            />
    </LinearLayout>

    <!-- Number 2 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_number_two"
            android:padding="8dp"
            android:layout_gravity="center"
            android:tint="@color/colorShareLogin"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Write a simple code."
            android:textSize="16sp"
            android:textColor="@color/colorPrimaryText"
            />
    </LinearLayout>

    <!-- Number 3 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_number_three"
            android:padding="8dp"
            android:layout_gravity="center"
            android:tint="@color/colorShareLogin"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Share location! As easy as it sounds"
            android:textSize="16sp"
            android:textColor="@color/colorPrimaryText"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textAlignment="textEnd"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:paddingEnd="24dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:paddingStart="24dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/colorShareLogin"
        android:background="@color/colorShareLogin"
        android:textColor="@color/colorPrimary"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="56dp"
        />
    </RelativeLayout>

</LinearLayout>